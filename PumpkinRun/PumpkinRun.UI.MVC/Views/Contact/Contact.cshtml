

@model PumpkinRun.UI.MVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}
  
       <header id="home" class="backstretched single-page-hero">
            <div class="dark-overlay single-page-hero">
                <div class="container single-page-hero">                   
                    <div class="vertical-center-js text-center">
                        <h1>Browse Our Courses</h1>
                        <p class="section-sub-title">Hurry, they fill up quickly.</p>
                    </div>
                </div>
            </div>
        </header>

        <section id="our-courses">
            <div class="section-inner">
                <div class="container" style="margin-top:-110px">
                    <div class="row">
                        <div class="col-sm-8">
                            <div id="comments-list" class="wow fadeIn" data-wow-delay="0.2s">
                                <div class="mt60 mb50 single-section-title">
                                    <h3></h3>
                                </div><!--/.media-->
                                <div class="media">
                                    <div class="pull-left">
                                    </div>
                                    <div class="media-body">                                   
                                    </div>
                                </div><!--/.media-->

                                <div id="comments-form" class="row wow fadeIn" data-wow-delay="0.2s">
                                    <div class="col-md-12">
                                        <div class="mt60 mb50 single-section-title">
                                            <h3>Send us a Message</h3>
                                        </div>
                                        <div id="message"></div>
  <form asp-action="Contact" class="php-email-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label for="sel1">Select Subject</label>
                <select asp-for="Subject" class="form-control"placeholder="Subject" id="sel1">
                <option asp-validation-for="Subject" class="text-danger">Event Feedback</option> 
                 <option asp-validation-for="Subject" class="text-danger">Registration Question</option>
                 <option asp-validation-for="Subject" class="text-danger">Becoming a Sponsor</option>
                 <option asp-validation-for="Subject" class="text-danger">Becoming a Volunteer</option>
                  <option asp-validation-for="Subject" class="text-danger">Helping the Beneficiaries</option>
                   <option asp-validation-for="Subject" class="text-danger">Other</option>

                 </select>
            </div>
            <div class="form-group mt-3">
                <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <input type="submit" value="Send Message" class="btn btn-orange"/>
            </div>
        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                        
                @*
                    If something went wrong when sending the email, display the ErrorMessage
                    to the user.
                *@

                @if(ViewBag.ErrorMessage != null)
            {
                <div class="row">
                    <p style="color: red; font-style: italic;">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </p>
                    </div>
            }

                <!-- ***** Subscribe Area Starts ***** -->
  

                        <div class="col-sm-3 col-sm-offset-1 sidebar" style="margin-top:120px;">
                            <div class="text-widget widget mb40">
                                <h4 class="widget-title mb40">Mail</h4>
                                <div class="widget-content">
                                    <p>Including printed registrations and additional donations</p>
                                    <p>

                        Jared Coones Memorial 5K Pumpkin Run/Walk
                                </p>
                                <p>

                    Attn: Sam Miceli, Race Director
                            P.O. Box 3314
                        Olathe, KS 66063-3314</p>
                                </div>
                                <br/>
                                  <h4 class="widget-title mb40">Hotline</h4>
                                <div class="widget-content">
                                <p>Carol Brewer: 913-909-3406 or <a href="mailto:csc3406@gmail.com">email</a></p>
                                <p><strong>Get <a title="Become a Sponsor" href="@Url.Action("Index", "SponsorTypes")">Sponsor information</a>&nbsp;or <a title="Volunteer Information" href="@Url.Action("HowToHelp", "Home")#volunteers">Volunteer information</a></strong></p>
                                </div>
                                <br/>

                                <br/>
                                 <img alt="" class="img-responsive" src="~/assets/images/Pumpkinresize.png">
                            </div>
                           
                    </div>
                </div>
            </div>
        </section>
                         
                   
                 

