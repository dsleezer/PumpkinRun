@{
    ViewData["Title"] = "Register";
}

<section id="register" class="hover-shift smoothie match-height" data-mh="page-splitter" style="display: block; height: 598px;">
    <div class="container match-height" data-mh="page-splitter" style="display: block; height: 598px;">
        <div class="row">
            <div class="col-md-4 dark-overlay fill-left smoothie">
                <div class="section-inner">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-10">
                            <h1>Let's run!</h1>
                            <p>There are several ways to register for the race.  You can sign up online via our link below or you can sign up via mail using the appropriate form.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<section id="our-courses">
    <div class="section-inner">
        <div class="container" style="margin-top: 60px;">

            <div class="row">
                <div class="col-xs-8 col-xs-offset-2" style="margin-bottom: 160px;">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <p class="alert alert-warning">@ViewData["ErrorMessage"]</p>
                    }
                    <h2 class="mb40">Registration Fees</h2>
                    <table border="0" width="100%" cellspacing="0" cellpadding="0" class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th style="text-align: center;">Registration Type</th>
                                <th style="text-align: center;">Register by September 25</th>
                                <th style="text-align: center;">Register after September 25</th>
                            </tr>
                            <tr>
                                <td>Individual</td>
                                <td style="text-align: center;">$25</td>
                                <td style="text-align: center;">$30</td>
                            </tr>
                            <tr>
                                <td>Family/Team*</td>
                                <td style="text-align: center;">$20/each</td>
                                <td style="text-align: center;">$25/each</td>
                            </tr>
                        </tbody>
                    </table>
                    <p><small>*Family/Team fee applies if four or more members of a family or team register together. Each member must complete a separate entry form and sign the Release and Waiver. Entry forms for all family members and one check for all entry fees must be submitted together to receive the family price.</small></p>
                </div>
            </div>

            <div class="row">

                <div class="col-md-12" style="margin-bottom: 160px;">
                    <div class="row">
                        <div class="col-xs-8 col-xs-offset-2 silver-wrapper p-5">
                            <h2 class="mt0 mb20">Register Online</h2>
                            <p class="mb20 lead">
                                You can sign up as an individual, team, school running club, or make a donation by visiting <a href="@ViewData["RegisterLink"]" target="_blank">our registration site</a>. Registration is simple -
                                just follow the prompts from the website.
                            </p>
                            <a href="@ViewData["RegisterLink"]" target="_blank" class="btn btn-primary btn-green">Register Online</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="EditRegisterLink" asp-controller="Register" class="btn btn-primary">
                                    Edit Register Link
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-12 mb60" style="margin-bottom: 120px;">
                    <div class="row">
                        <div class="col-xs-8 col-xs-offset-2">
                            <h2 class="mt0 mb20">Register By Mail</h2>

                            <div class="col-md-6">
                                <h4>Individuals/Teams</h4>
                                <p class="mb20">
                                    <div class="lead">Print <a href="~/assets/PDF/Registration-Form-Individual.pdf" target="_blank">this form</a>, fill it out, sign the releases and mail the form with a check to<br /></div>
                                    <div style="margin-left: 2em;" class="mb20">
                                        Jared Coones Pumpkin Run<br />
                                        P.O. Box 3314 <br />
                                        Olathe, KS 66063-3314
                                    </div>
                                    <div class="lead">Make checks payable to: </div>
                                    <div style="margin-left: 2em;" class="mb20">Jared Coones Pumpkin Run</div>
                                    <div class="alert alert-warning text-center">Please contact Carol Brewer with any questions at <a href="tel:9139093406">913.909.3406</a> or <a href="mailto:csc3406@gmail.com">email.</a></div>
                                </p>
                                <a href="~/assets/PDF/Registration-Form-Individual.pdf" target="_blank" class="btn btn-primary btn-green">Download Form</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="silver-wrapper p-5 mt-5">
                                        <h2 class="mt0 mb20">Admin Form Update</h2>
                                        <h3 class="mt0 mb20">Individual Race Form PDF</h3>
                                        <form asp-action="UploadIndividual" asp-controller="Register" method="post" enctype="multipart/form-data">
                                            <input type="file" name="IndividualForm" class="form-control" style="width: 75%;" />
                                            <input type="submit" value="Update Form" class="btn btn-primary btn-orange" style="margin-top: 20px;" />
                                        </form>
                                    </div>
                                }
                            </div>


                            <div class="col-md-6">
                                <h4>School Running Clubs</h4>
                                <p class="mb20">
                                    <div class="lead">Print <a href="~/assets/PDF/Registration-Form-School.pdf" target="_blank">this form</a>, fill it out, sign the releases, and mail the form with a check to<br /></div>
                                    <div style="margin-left: 2em;" class="mb20">
                                        Jared Coones Pumpkin Run<br />
                                        P.O. Box 3314 <br />
                                        Olathe, KS 66063-3314
                                    </div>
                                    <div class="lead">Make checks payable to: </div>
                                    <div style="margin-left: 2em;" class="mb20">Jared Coones Pumpkin Run</div>
                                    <div class="alert alert-warning text-center">Please contact Carol Brewer with any questions at <a href="tel:9139093406">913.909.3406</a> or <a href="mailto:csc3406@gmail.com">email.</a></div>

                                </p>

                                <a href="~/assets/PDF/Registration-Form-School.pdf" target="_blank" class="btn btn-primary btn-green">Download Form</a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="silver-wrapper p-5 mt-5">
                                        <h2 class="mt0 mb20">Admin Form Update</h2>
                                        <h3 class="mt0 mb20">School Running Club Race Form PDF</h3>
                                        <form asp-action="UploadClub" asp-controller="Register" method="post" enctype="multipart/form-data">
                                            <input type="file" name="ClubForm" class="form-control pb-4" style="width: 75%;" />
                                            <input type="submit" value="Update Form" class="btn btn-primary" style="margin-top: 20px;" />
                                        </form>
                                    </div>
                                }

                            </div>


                        </div>




                    </div>
                </div>
            </div>
        </div>
    </div>
</section>